    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tabsNav = document.getElementById('tabs-nav');
            const tabButtons = tabsNav.querySelectorAll('.tab-btn');
            const tabContents = document.querySelectorAll('.tab-content');

            tabsNav.addEventListener('click', (e) => {
                const clickedTab = e.target.closest('.tab-btn');
                if (!clickedTab) return;

                tabButtons.forEach(btn => btn.classList.remove('active'));
                clickedTab.classList.add('active');

                tabContents.forEach(content => content.classList.remove('active'));
                const targetContent = document.querySelector(clickedTab.dataset.target);
                targetContent.classList.add('active');
            });

            const downloadBtn = document.getElementById('download-btn');
            downloadBtn.addEventListener('click', () => {
                let fullText = "Mis Conversaciones - WebQuest: G√©nero, Accesibilidad y Seguridad Vial\n";
                fullText += "=======================================================================\n\n";
                
                const conversations = document.querySelectorAll('.ai-conversation-box');
                let hasNotes = false;
                conversations.forEach((convo, index) => {
                    const title = convo.querySelector('textarea').dataset.title || `Paso ${index + 1}`;
                    const messages = convo.querySelectorAll('.conversation-display div');
                    
                    if (messages.length > 1) { // Hay m√°s que el mensaje inicial de la IA
                        hasNotes = true;
                        fullText += `## ${title}\n\n`;
                        messages.forEach(msg => {
                            const prefix = msg.classList.contains('user-message') ? 'T√∫: ' : 'IA: ';
                            fullText += `${prefix}${msg.textContent.trim()}\n`;
                        });
                        fullText += "\n----------------------------------------\n\n";
                    }
                });

                if (!hasNotes) {
                    alert("A√∫n no has conversado con la IA. ¬°An√≠mate a reflexionar en los campos!");
                    return;
                }

                const blob = new Blob([fullText], { type: 'text/plain;charset=utf-8' });
                const a = document.createElement('a');
                a.href = URL.createObjectURL(blob);
                a.download = 'Mis_Conversaciones_Proyecto.txt';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(a.href);
            });
        });

        async function conversarConIA(button) {
            const conversationBox = button.closest('.ai-conversation-box');
            const textarea = conversationBox.querySelector('textarea');
            const display = conversationBox.querySelector('.conversation-display');

            const userText = textarea.value.trim();
            if (!userText) {
                alert("Por favor, escribe tu reflexi√≥n para continuar la conversaci√≥n.");
                return;
            }

            // Display user message
            const userMessageDiv = document.createElement('div');
            userMessageDiv.className = 'user-message p-2 rounded-lg max-w-xs ml-auto text-white mt-2';
            userMessageDiv.textContent = userText;
            display.appendChild(userMessageDiv);
            textarea.value = '';
            display.scrollTop = display.scrollHeight;

            // Show loader in AI message
            const loaderDiv = document.createElement('div');
            loaderDiv.className = 'ai-message p-2 rounded-lg max-w-xs mt-2 flex items-center';
            loaderDiv.innerHTML = '<div class="loader"></div>';
            display.appendChild(loaderDiv);
            display.scrollTop = display.scrollHeight;


            const systemPrompt = `Eres un tutor experto en g√©nero, accesibilidad y seguridad vial. Revisa la siguiente reflexi√≥n de un estudiante. 
            Tu rol es guiar, no dar todas las respuestas.
            1.  **Valida su aporte**: Comienza con una frase positiva como "Interesante punto..." o "Buena observaci√≥n...".
            2.  **A√±ade valor**: En una o dos frases, complementa su idea con un dato, un concepto o una perspectiva relacionada.
            3.  **Haz una pregunta abierta**: Finaliza con una pregunta que invite a profundizar o a conectar con el siguiente paso.
            Tu respuesta debe ser en espa√±ol, concisa, amigable y en un solo p√°rrafo.`;
            
            const apiKey = "AIzaSyAtSbsZeZmN8ztpFpftT9wJomOzdi2B3Iw"; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;

            const payload = {
                contents: [{ parts: [{ text: userText }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();
                const candidate = result.candidates?.[0];

                if (candidate && candidate.content?.parts?.[0]?.text) {
                    loaderDiv.textContent = candidate.content.parts[0].text;
                } else {
                    loaderDiv.textContent = "No pude procesar tu respuesta. Intenta reformular tu idea.";
                }
            } catch (error) {
                console.error("Error al contactar la IA:", error);
                loaderDiv.textContent = "Hubo un error de conexi√≥n. Por favor, int√©ntalo m√°s tarde.";
            } finally {
                 display.scrollTop = display.scrollHeight;
            }
        }
    </script>

